<% @page_title = "Login Easy | Profile" %>
<%= form_for(:user, :url => {:controller => 'users', :action => 'launch_update'}) do |f| %>
<div class="span12">
    <div class="header">
        <h3>Profile <span class="extra-title muted"></span></h3>
    </div> 
    <div class="row">
	<div class="span2">
    	<a href="#" class="thumbnail">
      		<img data-src="holder.js/100%x180" >
    	</a>
	</div>
	<div class="span6">
		<dl class="dl-horizontal">
	  		<dt>Username: </dt>
	  		<dd><%= @user.username%></dd>
	  		<dt>Email: </dt>
	  		<dd><%= @user.email%></dd>
	  		<dt>Address: </dt>
	  		<dd>
	  			<address>
	  				<strong>
	  					Twitter, Inc.
	  				</strong>
	  				<br>
	  				795 Folsom Ave, Suite 600<br>
	  				San Francisco, CA 94107<br>
	  				<abbr title="Phone">P:</abbr> (123) 456-7890
				</address>
			<%= submit_tag "Update", :name => 'update_button' ,:class => 'btn btn-primary' %>		
		</dd>
        <!-- <button class="btn btn-facebook"><i class="fa fa-facebook"></i> | Connect with Facebook</button> -->    
	</div>
	</div>
</div>
<% end %>